---
interface Props {
	title?: string;
}

const { title = "Axide — Manifesto" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Space+Grotesk:wght@600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<!-- Hero Section with Logo Space -->
		<section class="hero">
			<div class="logo-space">
				<div class="logo-container">
					<img src="/favicon.svg" alt="Axide Logo" class="logo" />
					<span class="spark"></span>
					<span class="spark spark--2"></span>
				</div>
			</div>
			<div class="hero-content">
				<h1>The Axide<br><span class="accent">Manifesto</span></h1>
			</div>
			<div class="diagonal-band"></div>
		</section>

		<!-- Long-form Content Section -->
		<main class="content-wrapper">
			<article class="prose">
				<slot />
			</article>
		</main>

		<!-- Footer -->
		<footer class="footer">
			<div class="container">
				<p class="footer-text">Axide <span class="accent">—</span> 2026</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* ===== CSS Variables ===== */
	:root {
		/* Neutrals */
		--primary-black: #0B0B10;
		--surface-black: #12121A;
		--primary-text: #F5F6FA;
		--secondary-text: #B9BBC7;
		--subtle-outline: #242433;

		/* Accent */
		--magenta: #E61E8C;
		--magenta-glow: rgba(230, 30, 140, 0.3);
		--magenta-subtle: rgba(230, 30, 140, 0.15);

		/* Spacing (8pt system) */
		--space-1: 8px;
		--space-2: 16px;
		--space-3: 24px;
		--space-4: 32px;
		--space-6: 48px;
		--space-9: 72px;
		--space-12: 96px;
		--space-18: 144px;
	}

	/* ===== Reset & Base ===== */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-size: 18px;
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
		font-weight: 400;
		background-color: var(--primary-black);
		color: var(--primary-text);
		line-height: 1.7;
		overflow-x: hidden;
	}

	/* ===== Typography ===== */
	h1, h2, h3 {
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
	}

	h1 {
		font-size: clamp(3rem, 10vw, 7rem);
	}

	h2 {
		font-size: clamp(2rem, 5vw, 3.5rem);
		margin-bottom: var(--space-9);
	}

	h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: var(--space-2);
	}

	.accent {
		color: var(--magenta);
	}

	/* ===== Layout ===== */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--space-4);
	}

	/* ===== Hero Section ===== */
	.hero {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		position: relative;
		overflow: hidden;
	}

	.logo-space {
		width: 100%;
		height: 50vh;
		min-height: 400px;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
	}

	.logo-container {
		width: clamp(300px, 40vh, 600px);
		height: clamp(300px, 40vh, 600px);
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.logo-container .logo {
		width: 100%;
		height: 100%;
		filter: drop-shadow(0 0 50px var(--magenta-glow));
	}

	/* Sparks - magenta micro-decorations */
	.spark {
		position: absolute;
		width: 40px;
		height: 3px;
		background: var(--magenta);
		border-radius: 2px;
		transform: rotate(-25deg);
		top: 20%;
		right: -10%;
		box-shadow: 0 0 20px var(--magenta-glow);
	}

	.spark--2 {
		width: 25px;
		height: 2px;
		top: 70%;
		left: -5%;
		transform: rotate(25deg);
	}

	.hero-content {
		text-align: center;
		padding: var(--space-6);
	}

	.diagonal-band {
		position: absolute;
		bottom: 0;
		left: -10%;
		width: 120%;
		height: 120px;
		background: var(--surface-black);
		transform: skewY(-3deg);
		transform-origin: left;
	}

	/* ===== Long-form Content ===== */
	.content-wrapper {
		background: var(--primary-black);
		padding: 0;
		position: relative;
	}

	.prose {
		max-width: 900px;
		margin: 0 auto;
		padding: 0 var(--space-6);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	/* Lead paragraph - the opening statement, unmissable */
	.prose .lead {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		font-size: clamp(1.75rem, 4.5vw, 2.75rem);
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 700;
		line-height: 1.3;
		color: var(--primary-text);
		margin: 0 auto !important;
		padding: var(--space-18) var(--space-6);
		text-align: center;
		max-width: 100%;
		width: 100vw;
		margin-left: calc(-50vw + 50%) !important;
		margin-right: calc(-50vw + 50%) !important;
		position: relative;
		background: var(--surface-black);
		box-sizing: border-box;
		border-bottom: 1px solid var(--subtle-outline);
	}

	.prose .lead::before {
		content: '';
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%) rotate(-25deg);
		width: 80px;
		height: 4px;
		background: var(--magenta);
		box-shadow: 0 0 30px var(--magenta-glow);
		z-index: 2;
	}

	/* Ensure any nested p tags from MDX don't break the layout */
	.prose .lead p {
		font-size: inherit !important;
		font-family: inherit !important;
		font-weight: inherit !important;
		line-height: inherit !important;
		color: inherit !important;
		margin: 0 !important;
		padding: 0 !important;
		text-align: center !important;
	}

	/* Accent words in lead get extra glow */
	.prose > p.lead .accent,
	.prose > .lead .accent {
		text-shadow: 0 0 30px var(--magenta-glow);
	}

	/* ===== Manifesto Sections ===== */
	.prose h2 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		margin: 0;
		padding: var(--space-18) 0 var(--space-9);
		text-align: center;
		color: var(--primary-text);
		position: relative;
	}

	/* Decorative spark before each section title */
	.prose h2::before {
		content: '';
		display: block;
		width: 40px;
		height: 3px;
		background: var(--magenta);
		margin: 0 auto var(--space-6);
		transform: rotate(-25deg);
		box-shadow: 0 0 20px var(--magenta-glow);
	}

	/* Section content container */
	.prose p {
		max-width: 640px;
		margin: 0 auto var(--space-6);
		padding: 0;
		color: var(--secondary-text);
		font-size: 1.125rem;
		line-height: 1.9;
		text-align: center;
	}

	/* Last paragraph before a new section gets extra spacing */
	.prose p + h2,
	.prose ul + h2,
	.prose blockquote + h2 {
		margin-top: var(--space-12);
	}

	/* ===== Blockquotes - Hero statements ===== */
	.prose blockquote {
		max-width: 100%;
		width: 100vw;
		margin: var(--space-18) calc(-50vw + 50%);
		padding: var(--space-12) var(--space-6);
		background: var(--surface-black);
		border: none;
		border-left: none;
		position: relative;
		text-align: center;
		display: flex;
		justify-content: center;
		/* Diagonal clip effect */
		clip-path: polygon(0 0, 100% 8px, 100% 100%, 0 calc(100% - 8px));
	}

	.prose blockquote::before {
		content: '';
		position: absolute;
		left: 50%;
		top: var(--space-4);
		transform: translateX(-50%) rotate(-25deg);
		width: 50px;
		height: 3px;
		background: var(--magenta);
		box-shadow: 0 0 25px var(--magenta-glow);
	}

	.prose blockquote p {
		margin: 0;
		padding-top: var(--space-4);
		max-width: 700px;
		color: var(--primary-text);
		font-size: clamp(1.375rem, 3vw, 1.75rem);
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 600;
		line-height: 1.5;
		text-align: center;
	}

	/* ===== Lists - Key points ===== */
	.prose ul {
		max-width: 640px;
		margin: var(--space-9) auto;
		padding: 0;
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: var(--space-4);
	}

	.prose li {
		position: relative;
		padding: var(--space-4) var(--space-6);
		padding-left: var(--space-9);
		background: var(--surface-black);
		border: 1px solid var(--subtle-outline);
		border-radius: 4px;
		color: var(--primary-text);
		font-size: 1.125rem;
		line-height: 1.7;
		transition: border-color 0.2s ease, box-shadow 0.2s ease;
	}

	.prose li:hover {
		border-color: var(--magenta);
		box-shadow: 0 0 30px var(--magenta-subtle);
	}

	.prose li::before {
		content: '';
		position: absolute;
		left: var(--space-4);
		top: 50%;
		transform: translateY(-50%) rotate(-25deg);
		width: 12px;
		height: 3px;
		background: var(--magenta);
		box-shadow: 0 0 10px var(--magenta-glow);
	}

	/* ===== Content Spark - Section divider ===== */
	.content-spark {
		width: 80px;
		height: 3px;
		background: var(--magenta);
		margin: var(--space-18) auto;
		transform: rotate(-25deg);
		box-shadow: 0 0 25px var(--magenta-glow);
		position: relative;
	}

	.content-spark::before,
	.content-spark::after {
		content: '';
		position: absolute;
		height: 2px;
		background: var(--magenta);
		opacity: 0.4;
	}

	.content-spark::before {
		width: 30px;
		top: -20px;
		left: 60px;
		transform: rotate(10deg);
	}

	.content-spark::after {
		width: 20px;
		top: 25px;
		left: -10px;
		transform: rotate(-5deg);
	}

	/* ===== Final section styling ===== */
	.prose > *:last-child {
		margin-bottom: 0;
		padding-bottom: var(--space-18);
	}

	/* ===== Footer ===== */
	.footer {
		padding: var(--space-18) 0;
		background: var(--surface-black);
		border-top: none;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		overflow: hidden;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: -10%;
		width: 120%;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--subtle-outline) 20%, var(--magenta) 50%, var(--subtle-outline) 80%, transparent);
		transform: rotate(-1deg);
	}

	.footer-text {
		text-align: center;
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 600;
		font-size: 0.875rem;
		color: var(--secondary-text);
		letter-spacing: 0.15em;
		text-transform: uppercase;
	}

	/* ===== Responsive ===== */
	@media (max-width: 768px) {
		.logo-space {
			height: 30vh;
			min-height: 200px;
		}
	}
</style>
