---
interface Props {
	title?: string;
}

const { title = "Axide — Manifesto" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Space+Grotesk:wght@600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<!-- Hero Section with Logo Space -->
		<section class="hero">
			<div class="logo-space">
				<div class="logo-container">
					<img src="/favicon.svg" alt="Axide Logo" class="logo" />
					<span class="spark"></span>
					<span class="spark spark--2"></span>
				</div>
			</div>
			<div class="hero-content">
				<h1>The Axide<br><span class="accent">Manifesto</span></h1>
			</div>
			<div class="diagonal-band"></div>
		</section>

		<!-- Long-form Content Section -->
		<main class="content-wrapper">
			<article class="prose">
				<slot />
			</article>
		</main>

		<!-- Footer -->
		<footer class="footer">
			<div class="container">
				<p class="footer-text">Axide <span class="accent">—</span> 2026</p>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* ===== CSS Variables ===== */
	:root {
		/* Neutrals */
		--primary-black: #0B0B10;
		--surface-black: #12121A;
		--primary-text: #F5F6FA;
		--secondary-text: #B9BBC7;
		--subtle-outline: #242433;

		/* Accent */
		--magenta: #E61E8C;
		--magenta-glow: rgba(230, 30, 140, 0.3);
		--magenta-subtle: rgba(230, 30, 140, 0.15);

		/* Spacing (8pt system) */
		--space-1: 8px;
		--space-2: 16px;
		--space-3: 24px;
		--space-4: 32px;
		--space-6: 48px;
		--space-9: 72px;
		--space-12: 96px;
		--space-18: 144px;
	}

	/* ===== Reset & Base ===== */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-size: 18px;
		scroll-behavior: smooth;
	}

	body {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
		font-weight: 400;
		background-color: var(--primary-black);
		color: var(--primary-text);
		line-height: 1.7;
		overflow-x: hidden;
	}

	/* ===== Typography ===== */
	h1, h2, h3 {
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 700;
		line-height: 1.1;
		letter-spacing: -0.02em;
	}

	h1 {
		font-size: clamp(3rem, 10vw, 7rem);
	}

	h2 {
		font-size: clamp(2rem, 5vw, 3.5rem);
		margin-bottom: var(--space-9);
	}

	h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: var(--space-2);
	}

	.accent {
		color: var(--magenta);
	}

	/* ===== Layout ===== */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--space-4);
	}

	/* ===== Hero Section ===== */
	.hero {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		position: relative;
		overflow: hidden;
	}

	.logo-space {
		width: 100%;
		height: 50vh;
		min-height: 400px;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
	}

	.logo-container {
		width: clamp(300px, 40vh, 600px);
		height: clamp(300px, 40vh, 600px);
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.logo-container .logo {
		width: 100%;
		height: 100%;
		filter: drop-shadow(0 0 50px var(--magenta-glow));
	}

	/* Sparks - magenta micro-decorations */
	.spark {
		position: absolute;
		width: 40px;
		height: 3px;
		background: var(--magenta);
		border-radius: 2px;
		transform: rotate(-25deg);
		top: 20%;
		right: -10%;
		box-shadow: 0 0 20px var(--magenta-glow);
	}

	.spark--2 {
		width: 25px;
		height: 2px;
		top: 70%;
		left: -5%;
		transform: rotate(25deg);
	}

	.hero-content {
		text-align: center;
		padding: var(--space-6);
	}

	.diagonal-band {
		position: absolute;
		bottom: 0;
		left: -10%;
		width: 120%;
		height: 120px;
		background: var(--surface-black);
		transform: skewY(-3deg);
		transform-origin: left;
	}

	/* ===== Long-form Content ===== */
	.content-wrapper {
		background: var(--surface-black);
		padding: var(--space-18) 0;
		position: relative;
	}

	.prose {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 var(--space-4);
	}

	.prose .lead {
		font-size: clamp(1.25rem, 3vw, 1.75rem);
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 600;
		line-height: 1.5;
		color: var(--primary-text);
		margin-bottom: var(--space-12);
	}

	.prose h2 {
		margin-top: var(--space-18);
		margin-bottom: var(--space-6);
		text-align: left;
	}

	.prose p {
		margin-bottom: var(--space-6);
		color: var(--secondary-text);
		font-size: 1.1rem;
	}

	.prose blockquote {
		margin: var(--space-12) 0;
		padding-left: var(--space-4);
		border-left: 3px solid var(--magenta);
		font-style: italic;
		text-align: left;
		font-size: 1.5rem;
	}

	.prose ul {
		margin-bottom: var(--space-6);
		padding-left: var(--space-4);
		list-style: none;
	}

	.prose li {
		position: relative;
		margin-bottom: var(--space-2);
		color: var(--secondary-text);
	}

	.prose li::before {
		content: '';
		position: absolute;
		left: -20px;
		top: 12px;
		width: 8px;
		height: 2px;
		background: var(--magenta);
		transform: rotate(-25deg);
	}

	.content-spark {
		width: 60px;
		height: 3px;
		background: var(--magenta);
		margin: var(--space-12) 0;
		transform: rotate(-25deg);
		opacity: 0.5;
	}

	/* ===== Footer ===== */
	.footer {
		padding: var(--space-18) 0;
		background: var(--primary-black);
		border-top: 1px solid var(--subtle-outline);
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.footer-text {
		text-align: center;
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 600;
		font-size: 1rem;
		color: var(--secondary-text);
		letter-spacing: 0.1em;
		text-transform: uppercase;
	}

	/* ===== Responsive ===== */
	@media (max-width: 768px) {
		.logo-space {
			height: 30vh;
			min-height: 200px;
		}
	}
</style>
